<?xml version="1.0" encoding="UTF-8"?>
<layout>
	<order_adminhtml_order_index>
		 <reference name="content">
            <block type="order/adminhtml_order" name="order"></block>
        </reference>
	</order_adminhtml_order_index>
	<order_adminhtml_order_neworder>
		<reference name="content">
            <block type="order/adminhtml_cart" name="cart" template="order/adminhtml/cart.phtml">
            	<block type = "order/adminhtml_cart_customer" name="customer" template="order/adminhtml/cart/customer.phtml"/>
                <block type = "order/adminhtml_cart_account" name="account" template="order/adminhtml/cart/account.phtml"/>
                <block type = "order/adminhtml_cart_product" name="product" template="order/adminhtml/cart/product.phtml">
                    <block type="order/adminhtml_cart_product_grid" name="product_list"></block>
                </block>
                <block type = "order/adminhtml_cart_item" name="items" template="order/adminhtml/cart/item.phtml"/>
            	<block type = "order/adminhtml_cart_billing_address" name="billing_address" template="order/adminhtml/cart/billing/address.phtml"/>
                <block type = "order/adminhtml_cart_shipping_address" name="shipping_address" template="order/adminhtml/cart/shipping/address.phtml"/>
                <block type = "order/adminhtml_cart_payment" name="payment_method" template="order/adminhtml/cart/payment.phtml"/>
                <block type = "order/adminhtml_cart_shipping" name="shipping_method" template="order/adminhtml/cart/shipping.phtml"/>
                <block type = "order/adminhtml_cart_total" name="total" template="order/adminhtml/cart/total.phtml"/>


            </block>
        </reference>
	</order_adminhtml_order_neworder>

    <order_adminhtml_order_view>
        <reference name="content">
            <block type="order/adminhtml_view" name="order" template="order/adminhtml/view.phtml">
                <block type="order/adminhtml_view_account" name="account" template="order/adminhtml/view/account.phtml"/>
                <block type="order/adminhtml_view_items" name="items" template="order/adminhtml/view/items.phtml"/>
                <block type="order/adminhtml_view_shippingaddress" name="shipping_address" template="order/adminhtml/view/shippingaddress.phtml"/>
                <block type="order/adminhtml_view_billingaddress" name="billing_address" template="order/adminhtml/view/billingaddress.phtml"/>
                <block type="order/adminhtml_view_paymentmethod" name="payment_method" template="order/adminhtml/view/paymentmethod.phtml"/>
                <block type="order/adminhtml_view_shippingmethod" name="shipping_method" template="order/adminhtml/view/shippingmethod.phtml"/>
                <block type="order/adminhtml_view_total" name="total" template="order/adminhtml/view/total.phtml"/>
            </block>
        </reference>
    </order_adminhtml_order_view>
</layout>